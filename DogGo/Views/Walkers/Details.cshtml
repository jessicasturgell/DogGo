@model DogGo.Models.ViewModels.WalkerProfileViewModel

@{ ViewData["Title"] ="Profile"; }
<div>
  <h1 class="mb-4">@Model.Walker.Name</h1>

  <section class="container">
    <img
      style="width:100px;float:left;margin-right:20px"
      src="https://upload.wikimedia.org/wikipedia/commons/a/a0/Font_Awesome_5_regular_user-circle.svg"
    />
    <div>
      <label class="font-weight-bold">Name:</label>
      <span>@Model.Walker.Name</span>
    </div>
    <div>
      <label class="font-weight-bold">Neighborhood:</label>
      <span>@Model.Walker.Neighborhood.Name</span>
    </div>
    <div>
  </section>

  <hr class="mt-5" />
  <div class="clearfix"></div>

  <div class="row">
    <section class="col-8 container mt-5">
      <h1 class="text-left">Recent Walks</h1>

       <table style="width: 90%">
           <tr>
               <th style="width: 30%; color: gray">Date</th>
                    <th style="width: 30%; color: gray">Client</th>
                    <th style="width: 30%; color: gray">Duration</th>
           </tr>
        @foreach (Walks walk in Model.Walks) {
        <tr style="border-bottom: 1px solid gray">
                        <td style="width: 30%">@walk.Date</td>
                        <td style="width: 30%">@walk.Dog.Name</td>
                        <td style="width: 30%">@walk.Duration</td>
        </tr>
        }
       </table>
    </section>

    <section class="col-lg-4 col-md-8 container mt-5">
            <h2 style="color: gray">Total Walk Time: <span style="color: black">@Model.TotalWalkDuration minutes</span</h2>
    </section>
  </div>
</div>